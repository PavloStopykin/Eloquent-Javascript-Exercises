function countBs(str) {
    var count = 0;
    for (var x = 0; x < str.length; x++) {
        if (str.charAt(x) === "B") {
            count++;

        }
    }
        return (count);
}

console.log(countBs("BBBBBBBBC"));



function countChar(str, char) {
    var count = 0;
    for (var x = 0; x < str.length; x++) {
        if (str.charAt(x) === char) {
            count++;

        }
    }
        return (count);
}

console.log(countChar("kakkerlak", "k"));
